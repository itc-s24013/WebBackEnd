extends ../layout.pug

block header
  section(class=['max-w-lg', 'mt-2', 'space-y-3','divide-y', 'divide-gray-300'])
  h1(class=['text-5xl/14', 'font-light', 'mb-4', 'py-2']) メッセージ一覧

block content
    each post in posts
      div(class=['grid', 'grid-cols-7', 'space-y-2'])
        p(class=['font-bold', 'text-sm/tight',])
          a(href=`/board/user/${post.user.id}`
            class=['underline', 'hover:text-blue-600'])= user.name
        p(class=['text-sm/tight', 'col-span-4'])= post.message
        p(class=['text-sm/tight', 'col-span-2'])= dateFormat(post.createdAt)